{
  "name": "substrate",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noUnusedLocals false && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run build && butler push dist/src/game/test/ drewww/substrate:web"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-singlefile": "^2.0.0",
    "@vitest/coverage-v8": "latest",
    "jsdom": "latest",
    "vitest": "latest",
    "@types/uuid": "^9.0.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "uuid": "^9.0.0",
    "wally-fov": "^2.0.2"
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": ["./src/test/setup.ts"],
    "globals": true,
    "coverage": {
      "provider": "v8",
      "reporter": ["text", "html"],
      "exclude": [
        "node_modules/",
        "dist/"
      ]
    }
  }
}
